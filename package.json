{
    "name": "@sklv-labs/ts-nestjs-openapi",
    "version": "0.1.0",
    "description": "NestJS OpenAPI package",
    "author": "sklv-labs",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sklv-labs/ts-nestjs-openapi.git"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "CHANGELOG.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsc",
        "format": "prettier --write \"src/**/*.ts\"",
        "lint": "eslint \"src/**/*.ts\"",
        "lint:fix": "eslint \"src/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "type-check": "tsc --noEmit",
        "prepublishOnly": "npm run type-check && npm run build",
        "version:patch": "npm version patch && git push --follow-tags",
        "version:minor": "npm version minor && git push --follow-tags",
        "version:major": "npm version major && git push --follow-tags",
        "yalc:link": "yalc add @sklv-labs/ts-dev-configs",
        "yalc:update": "yalc update @sklv-labs/ts-dev-configs",
        "yalc:remove": "yalc remove @sklv-labs/ts-dev-configs",
        "yalc:publish": "yalc publish",
        "yalc:push": "npm run build && yalc push"
    },
    "peerDependencies": {
        "@nestjs/common": "^11.1.11",
        "@nestjs/core": "^11.1.11",
        "@nestjs/swagger": "^11.2.4",
        "@scalar/nestjs-api-reference": "^1.0.13",
        "@scalar/themes": "0.13.26",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^20.3.1",
        "@commitlint/config-conventional": "^20.3.1",
        "@darraghor/eslint-plugin-nestjs-typed": "^7.1.12",
        "@nestjs/common": "^11.1.11",
        "@nestjs/core": "^11.1.11",
        "@nestjs/platform-express": "^11.1.11",
        "@nestjs/swagger": "^11.2.4",
        "@nestjs/testing": "^11.1.11",
        "@scalar/nestjs-api-reference": "^1.0.15",
        "@scalar/themes": "0.13.26",
        "@sklv-labs/ts-dev-configs": "0.1.3",
        "@types/express": "^5.0.6",
        "@types/jest": "^30.0.0",
        "@types/node": "^25.0.3",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import-x": "^4.16.1",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^17.0.0",
        "jest": "^30.2.0",
        "prettier": "^3.7.4",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.2",
        "ts-jest": "^29.4.6",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.52.0",
        "yalc": "^1.0.0-pre.53"
    },
    "engines": {
        "node": ">=24.0.0"
    }
}